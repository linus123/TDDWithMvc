@model UI.Models.IndexModel

@{
    ViewBag.Title = "Home Page";
}

<h2>Membership</h2>
<p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
   @Html.ValidationSummary(true, "Could not join. Please correct the errors and try again.")

   foreach (var membershipOption in Model.MembershipOptions)
   {
        @Html.RadioButton("membershipOption", membershipOption.Id)
        @membershipOption.Name
        <br />
   }   

        <div class="editor-label">
            @Html.LabelFor(m => m.FirstName)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(m => m.FirstName)
            @Html.ValidationMessageFor(m => m.FirstName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(m => m.LastName)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(m => m.LastName)
            @Html.ValidationMessageFor(m => m.LastName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(m => m.EmailAddress)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(m => m.EmailAddress)
            @Html.ValidationMessageFor(m => m.EmailAddress)
        </div>

        <div class="editor-label">
            @Html.LabelFor(m => m.DateOfBirth)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(m => m.DateOfBirth)
            @Html.ValidationMessageFor(m => m.DateOfBirth)
        </div>

            <div class="editor-label">
            @Html.LabelFor(m => m.CreditCardNumber)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(m => m.CreditCardNumber)
            @Html.ValidationMessageFor(m => m.CreditCardNumber)
        </div>

        <div class="editor-label">
            @Html.LabelFor(m => m.SelectedCreditCardType)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(m => m.SelectedCreditCardType, Model.CreditCardTypes)
            @Html.ValidationMessageFor(m => m.SelectedCreditCardType)
        </div>

            <p>
            <input type="submit" value="Join" />
        </p>
    
}

</p>
